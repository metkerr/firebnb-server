<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">Booking List</h6>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table
        class="table table-bordered"
        id="dataTable"
        width="100%"
        cellspacing="0"
      >
        <thead>
          <tr>
            <th>No</th>
            <th>Invoice</th>
            <th>Date</th>
            <th>Title</th>
            <th>Member Name</th>
            <th>Status</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% for(i in booking){ %>
          <tr>
            <td><%= +i+1 %></td>
            <td>#<%= booking[i].invoice %></td>
            <td>
              <%= booking[i].bookingStartDate.toLocaleDateString() %> - <%=
              booking[i].bookingEndDate.toLocaleDateString() %>
            </td>
            <td><%= booking[i].itemId.title %></td>
            <td>
              <%= booking[i].memberId.firstName %> <%=
              booking[i].memberId.lastName %>
            </td>
            <% if(booking[i].payment.status === 'Accepted') { %>
            <td style="color: rgb(15, 196, 24); font-weight: bold">
              <%= booking[i].payment.status %>
            </td>
            <% }else if(booking[i].payment.status === 'Process'){ %>
            <td style="color: #e0bc18; font-weight: bold">
              <%= booking[i].payment.status %>
            </td>
            <% }else{ %>
            <td style="color: rgb(209, 3, 3); font-weight: bold">
              <%= booking[i].payment.status %>
            </td>
            <% } %>
            <td>
              <a
                href="/admin/booking/<%= booking[i].id %>"
                class="btn btn-success btn-circle btn-sm button-update"
                ><i class="fas fa-info"></i
              ></a>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
