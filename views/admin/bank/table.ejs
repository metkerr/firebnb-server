<div class="card shadow mb-4">
  <div class="card-header py-3">
    <!-- Button trigger add modal -->
    <button
      type="button"
      class="btn btn-primary"
      data-toggle="modal"
      data-target="#add-modal"
    >
      Add
    </button>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table
        class="table table-bordered"
        id="dataTable"
        width="100%"
        cellspacing="0"
      >
        <thead>
          <tr>
            <th>No</th>
            <th>Bank Name</th>
            <th>Account Number</th>
            <th>Name</th>
            <th>Logo</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% for(let i in bank) { %>
          <tr>
            <td><%= +i + 1 %></td>
            <td><%= bank[i].bankName %></td>
            <td><%= bank[i].accountNumber %></td>
            <td><%= bank[i].name %></td>
            <td>
              <img
                src="http://localhost:3000/<%= bank[i].imageUrl %>"
                alt="bankLogo"
                height="29"
                style="max-width: fit-content"
              />
            </td>
            <td>
              <form
                action="/admin/bank/<%= bank[i].id %>?_method=DELETE"
                method="POST"
              >
                <a
                  href="javascript:void()"
                  type="button"
                  class="btn btn-warning btn-circle btn-sm mr-2 button-update"
                  data-id="<%= bank[i].id %>"
                  data-bankname="<%= bank[i].bankName %>"
                  data-accountnumber="<%= bank[i].accountNumber %>"
                  data-name="<%= bank[i].name %>"
                  ><i class="fas fa-edit"></i
                ></a>
                <button type="submit" class="btn btn-danger btn-circle btn-sm">
                  <i class="fas fa-trash"></i>
                </button>
              </form>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
