<%- include('../../../partials/header.ejs') %>
<!-- Page Wrapper -->
<div id="wrapper">
  <!-- Sidebar -->
  <%- include('../../../partials/sidebar.ejs') %>
  <!-- End of Sidebar -->

  <!-- Content Wrapper -->
  <div id="content-wrapper" class="d-flex flex-column">
    <!-- Main Content -->
    <div id="content">
      <!-- Topbar -->
      <%- include('../../../partials/nav.ejs') %>
      <!-- End of Topbar -->

      <!-- Begin Page Content -->
      <div class="container-fluid">
        <%- include('../../../partials/message.ejs') %>
        <!-- Page Heading -->
        <h1 class="h3 mb-4 text-gray-800"><%= title %></h1>
        <!-- End of Page Heading -->

        <nav>
          <div class="nav nav-tabs" id="nav-tab" role="tablist">
            <a
              class="nav-link active"
              id="nav-show-feature-tab"
              data-toggle="tab"
              href="#nav-show-feature"
              role="tab"
              aria-controls="nav-show-feature"
              aria-selected="true"
              >Show Feature</a
            >
            <a
              class="nav-link"
              id="nav-show-activity-tab"
              data-toggle="tab"
              href="#nav-show-activity"
              role="tab"
              aria-controls="nav-show-activity"
              aria-selected="false"
              >Show Activity</a
            >
          </div>

          <div class="tab-content" id="nav-tabContent">
            <%- include('show_feature.ejs') %> <%- include('show_activity.ejs')
            %>
          </div>
        </nav>
      </div>
      <!-- /.container-fluid -->
    </div>
    <!-- End of Main Content -->

    <!-- Footer -->
    <%- include('../../../partials/footer.ejs') %>
    <!-- End of Footer -->
  </div>
  <!-- End of Content Wrapper -->
</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
  <i class="fas fa-angle-up"></i>
</a>

<!-- Logout Modal-->
<%- include('../../../partials/logout_modal.ejs') %> <%-
include('activity_edit_modal.ejs') %> <%- include('feature_edit_modal.ejs') %>
<%- include('../../../partials/js.ejs') %>

<script>
  $(document).ready(() => {
    $("#dataTableActivity").DataTable();
  });

  $("#dataTableActivity").on("click", ".button-update", function () {
    let id = $(this).data("id");
    let name = $(this).data("name");
    let type = $(this).data("type");
    $("#edit-modal-activity").modal("show");
    $(".id").val(id);
    $(".name").val(name);
    $(".type").val(type);
  });

  $("#dataTable").on("click", ".button-update", function () {
    let id = $(this).data("id");
    let name = $(this).data("name");
    let qty = $(this).data("qty");
    $("#edit-modal").modal("show");
    $(".id").val(id);
    $(".name").val(name);
    $(".qty").val(qty);
  });
</script>
