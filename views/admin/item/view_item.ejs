<%- include('../../partials/header.ejs') %>
<!-- Page Wrapper -->
<div id="wrapper">
  <!-- Sidebar -->
  <%- include('../../partials/sidebar.ejs') %>
  <!-- End of Sidebar -->

  <!-- Content Wrapper -->
  <div id="content-wrapper" class="d-flex flex-column">
    <!-- Main Content -->
    <div id="content">
      <!-- Topbar -->
      <%- include('../../partials/nav.ejs') %>
      <!-- End of Topbar -->

      <!-- Begin Page Content -->
      <div class="container-fluid">
        <%- include('../../partials/message.ejs') %>
        <!-- Page Heading -->
        <h1 class="h3 mb-4 text-gray-800">Item</h1>
        <!-- End of Page Heading -->

        <% if(action === 'view'){ %>
        <nav>
          <div class="nav nav-tabs" id="nav-tab" role="tablist">
            <a
              class="nav-link active"
              id="nav-show-item-tab"
              data-toggle="tab"
              href="#nav-show-item"
              role="tab"
              aria-controls="nav-show-item"
              aria-selected="true"
              >Show Item</a
            >
            <a
              class="nav-link"
              id="nav-add-item-tab"
              data-toggle="tab"
              href="#nav-add-item"
              role="tab"
              aria-controls="nav-add-item"
              aria-selected="false"
              >Add Item</a
            >
          </div>

          <div class="tab-content" id="nav-tabContent">
            <%- include('show_table.ejs') %> <%- include('add_item.ejs') %>
          </div>
        </nav>
        <% }else if(action==='show image'){ %>
        <nav>
          <div class="nav nav-tabs" id="nav-tab" role="tablist">
            <a
              class="nav-link active"
              id="nav-show-Image-tab"
              data-toggle="tab"
              href="#nav-show-Image"
              role="tab"
              aria-controls="nav-show-Image"
              aria-selected="true"
              >Show Image</a
            >
          </div>

          <div class="tab-content" id="nav-tabContent">
            <%- include('show_image.ejs') %>
          </div>
        </nav>
        <% }else{ %>
        <nav>
          <div class="nav nav-tabs" id="nav-tab" role="tablist">
            <a
              class="nav-link active"
              id="nav-edit-item-tab"
              data-toggle="tab"
              href="#nav-edit-item"
              role="tab"
              aria-controls="nav-edit-item"
              aria-selected="true"
              >Edit Item</a
            >
          </div>

          <div class="tab-content" id="nav-tabContent">
            <%- include('edit_item.ejs') %>
          </div>
        </nav>
        <% } %>
      </div>
      <!-- /.container-fluid -->
    </div>
    <!-- End of Main Content -->

    <!-- Footer -->
    <%- include('../../partials/footer.ejs') %>
    <!-- End of Footer -->
  </div>
  <!-- End of Content Wrapper -->
</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
  <i class="fas fa-angle-up"></i>
</a>

<!-- Logout Modal-->
<%- include('../../partials/logout_modal.ejs') %> <%-
include('../../partials/js.ejs') %>
