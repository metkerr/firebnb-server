<div
  class="tab-pane fade show active"
  id="nav-add-item"
  role="tabpanel"
  aria-labelledby="nav-add-item-tab"
>
  <div class="card shadow mb-4 mt-2">
    <div class="card-body">
      <form
        action="/admin/item/<%= item.id %>?_method=PUT"
        method="POST"
        enctype="multipart/form-data"
      >
        <div class="form-group">
          <label for="title">Title</label>
          <input
            type="text"
            class="form-control"
            name="title"
            placeholder="Item title"
            value="<%= item.title %>"
            required
          />
        </div>
        <div class="form-group">
          <label for="price">Price</label>
          <input
            type="number"
            class="form-control"
            name="price"
            placeholder="Item price"
            value="<%= item.price %>"
            required
          />
        </div>
        <div class="form-group">
          <label for="country">Country</label>
          <select name="country" class="form-control">
            <% for(country in countryData){ if(country===item.country){ %>
            <option value="<%=country %>" selected><%= country %></option>
            <% }else{ %>
            <option value="<%= country %>"><%= country %></option>
            <% }} %>
          </select>
        </div>
        <div class="form-group">
          <label for="city">city</label>
          <input
            type="text"
            class="form-control"
            name="city"
            placeholder="Item city"
            value="<%= item.city %>"
            required
          />
        </div>
        <div class="form-group">
          <label for="category">Category</label>
          <select name="categoryId" class="form-control">
            <% for(category of category){ if(category.id == item.categoryId.id){
            %>
            <option value="<%= category.id %>" selected>
              <%= category.name %>
            </option>
            <% }else{ %>
            <option value="<%= category.id %>"><%= category.name %></option>
            <% }} %>
          </select>
        </div>
        <div class="form-group">
          <label for="image">image</label>
          <input
            type="file"
            class="form-control"
            name="image"
            placeholder="Item image"
            multiple
          />
        </div>
        <div class="form-group">
          <label for="description">description</label>
          <textarea name="about" class="form-control">
<%= item.description %></textarea
          >
        </div>
        <a href="/admin/item" type="submit" class="btn btn-secondary">Cancel</a>
        <button type="submit" class="btn btn-primary">Save</button>
      </form>
    </div>
  </div>
</div>
